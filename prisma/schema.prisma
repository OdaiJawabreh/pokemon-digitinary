datasource db {  
    provider = "mongodb"
    url = env("DATABASE_URL")
} 
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId  
  email     String   @unique @required
  name      String   @required
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role?    @default(MEMBER)
  password  String   @required
}

model Pokemon {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId  
  name           String           @required
  pokedexNumber  Int              @required
  imgName        String           @required
  generation     Int?             
  evolutionStage EvolutionStage?
  evolved        Boolean          @default(false)
  familyId       Int?
  crossGen       Boolean          @default(false) @required
  type1          Type?            @required
  type2          Type?
  weather1       Weather?         @required
  weather2       Weather?
  statTotal      Int?             @required
  atk            Int?             @required
  def            Int?             @required
  sta            Int?             @required
  legendary      Boolean          @required
  aquireable     Boolean          @required
  spawns         Boolean          @required @default(false)
  regional       Boolean          @required @default(false)
  raidable       Int?             @default(0)
  hatchable      Int?             @required @default(0)
  shiny          Boolean          @required @default(false)
  nest           Boolean          @required @default(false)
  new            Boolean          @required @default(false)
  notGettable    Boolean          @required @default(false)
  futureEvolve   Boolean          @required @default(false)
  cp40           Int?             @required
  cp39           Int?             @required
}

enum Role {
  ADMIN
  MEMBER
}

enum EvolutionStage {
  0
  1
  2
  3
  Evolved
  Lower
}

enum Type {
  Grass
  Fire
  Water
  Bug
  Normal
  Poison
  Electric
  Ground
  Fairy
  Fighting
  Psychic
  Rock
  Ghost
  Ice
  Dragon
  Dark
  Steel
  Flying
}

enum Weather {
  SunnyClear
  Rainy
  PartlyCloudy
  Cloudy
  Windy
  Fog
  Snow
}
